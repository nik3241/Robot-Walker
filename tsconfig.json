{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": false,
    },
    "watchOptions": {
        "excludeDirectories": [
            "**/node_modules",
            "_build",
            "temp/*"
        ]
    },
    "include": [
        "src/**/*"
    ]
}